<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <!-- Garis Atas -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#03AED2" />

    <!-- Produk dan Detail -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Gambar Produk -->
        <ImageView
            android:id="@+id/imgProduk"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/kaos1"
            android:contentDescription="Gambar Produk" />

        <!-- Detail Produk -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/keranjang_nama_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaos Kurir Sawit"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/mitr_medium" />

            <TextView
                android:id="@+id/Ukurannya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ukuran: M"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="@font/mitr_medium" />

            <TextView
                android:id="@+id/JumlahProdukKeranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="@font/mitr_medium" />
        </LinearLayout>

        <!-- Harga dan Tombol Hapus -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/harga_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 120,000"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/mitr_medium"
                android:gravity="end" />

            <!-- Tombol Hapus -->
            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_delete"
                android:layout_marginTop="10dp"
                android:contentDescription="Hapus Produk" />
        </LinearLayout>
    </LinearLayout>

    <!-- Garis Bawah -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#03AED2" />

</LinearLayout>
